<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white"
            android:contentDescription="Cancel"
            android:paddingLeft="20dp"
            android:src="@drawable/backward_arrow_img" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnDummy"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/BtnFriendConfirmSettleUp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="230sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        >

        <ImageView
            android:id="@+id/IVGroupBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/background_img" />

        <ImageView
            android:layout_width="133dp"
            android:layout_height="115dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/profilefriends_img" />

    </FrameLayout>

    <TextView
        android:id="@+id/TVFriendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="User Name" />

    <TextView
        android:id="@+id/TVFriendPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="User Phone Number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:text="Account Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVAccountName"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:text="Account Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:text="Account Number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVAccountNumber"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:text="Account Number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:paddingTop="20dp"
            android:text="QR Code"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/IVQRCode"
            android:layout_width="220dp"
            android:layout_height="230dp"
            android:src="@drawable/qr_img"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:text="Receipt / Proof of Payment:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/BtnUploadPaymentProof"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:src="@drawable/upload_img"
            android:contentDescription="Upload Receipt / Proof of Payment"
          />

    </LinearLayout>

</LinearLayout>