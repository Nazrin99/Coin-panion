<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:debt_view="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/debt_view"
        android:layout_gravity="top"
        debt_view:cardCornerRadius="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="121dp">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="15dp"
                    debt_view:srcCompat="@drawable/img" />
                <!--                TODO kena check balik betul tak the entries-->
                <ListView
                    android:id="@+id/list_debt"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|center_vertical"
                    android:entries="@array/sample_debt"/>

<!--                TODO make it clickable-->
                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@mipmap/ic_next_foreground" />

            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>