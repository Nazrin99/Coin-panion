<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:debt_view="http://schemas.android.com/tools">

<!--    TODO card view for fragment create expenses-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_expenses_friend_item"
        android:layout_gravity="top"
        debt_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CBCustomExpansesItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:id="@+id/TVCustomExpansesFriendName"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingTop="15dp"
                android:text="Username"
                />

            <TextView
                android:id="@+id/TVCustomExpansesCurrency"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="15dp"
                android:text="RM"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/ETCustomExpansesItemAmount"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:paddingTop="15dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>