<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editProfilePicImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileSaveButton"
        app:srcCompat="@mipmap/default_profile" />

    <TextView
        android:id="@+id/editProfileEditPictureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=" Edit Picture "
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePicImageView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileEditPictureTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Username:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileUsernameEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter name"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="First Name:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileFirstNameEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter phone number"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Last Name:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileLastNameEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter phone number"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Bio:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileBioEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter phone number"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Phone Number:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfilePhoneNumberEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter phone number"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Email:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileEmailEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter email"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Debt Limit:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view16"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileDebtLimitEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter debt limit"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Debt Limit End Date:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view17"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <CalendarView
                    android:id="@+id/editProfileDebtLimitCalendarView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Account Name:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view15"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileAccountNameEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter account name"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Account Number:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/editProfileAccountNumberEditText"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_btn"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:text="Enter account number"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/editProfileQRImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:paddingVertical="2dp"
                    app:srcCompat="@drawable/ic_qrcode_foreground" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>