<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Terms_Privacy">

    <include
        android:id="@+id/ABPrivacyPolicy"
        layout="@layout/appbar"
        />

    <WebView
        android:id="@+id/WVprivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:layout_below="@id/ABPrivacyPolicy"
        android:scrollbars="vertical" />

    <CheckBox
        android:id="@+id/CBAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WVprivacyPolicy"
        android:layout_gravity="bottom"
        android:layout_marginTop="-2dp"
        android:text="By ticking, you are confirming that you have read,  understood and agree to Coin-panion terms and conditions" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnToLogin"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CBAgree"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/rounded_edge_button"
        android:text="Next"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>